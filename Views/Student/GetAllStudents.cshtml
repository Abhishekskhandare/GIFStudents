@model GIFStudents.ViewModel.StudentListViewModel

@{
    ViewBag.Title = "GetAllStudents";
}

<h2>GetAllStudents</h2>
@using (Html.BeginForm("UpdateStudents", "Student", FormMethod.Post))
{
    <table class="table">
        <tr>
            <th>StudentName</th>
            <th>ParentName</th>
            <th>StudentClass</th>
            <th>ParentEmail</th>
            <th>ParentMobile</th>
            <th>IsActive</th>
            <th>Action</th>
        </tr>

        @for (int i = 0; i < Model.StudentDetail.Count; i++)
        {
            <tr>
                <td>@Model.StudentDetail[i].StudentName</td>
                <td>@Model.StudentDetail[i].ParentName</td>
                <td>@Model.StudentDetail[i].StudentClass</td>
                <td>@Model.StudentDetail[i].ParentEmail</td>
                <td>@Model.StudentDetail[i].ParentMobile</td>
                <td>
                    @Html.HiddenFor(m => m.StudentDetail[i].StudentId)
                    <input type="checkbox" name="StudentDetail[@i].IsActive" value="true" @(Model.StudentDetail[i].IsActive ? "checked" : "") />
                    <input type="hidden" name="StudentDetail[@i].IsActive" value="false" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditStudentById", new { id = Model.StudentDetail[i].StudentId })
                </td>
            </tr>
        }


    </table>

    <button type="submit" class="btn btn-primary">Update</button>
}
